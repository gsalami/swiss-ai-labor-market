  "description": "Self-learning knowledge base about Swiss labor market and AI impact, with MCP server for AI agents",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/api/server.ts",
    "db:start": "echo 'Starting ruVector...'",
    "db:stop": "echo 'Stopping ruVector...'",
    "mcp:start": "tsx src/mcp/server.ts",
    "dashboard": "tsx src/api/server.ts",
    "dashboard:dev": "tsx watch src/api/server.ts",
    "ingest": "tsx src/pipeline/ingest.ts",
